<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :start_at, :class => 'control-label' %>
    <%= f.datetime_select :start_at, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_at, :class => 'control-label' %>
    <%= f.datetime_select :end_at, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :company_id, :class => 'control-label' %>
    <%= f.select :company_id, @companies.map{ |c| [c.name, c.id] }, {}, {class: 'form-control dropdown-tooggle'} %>
  </div>

  <div class="form-actions">
    <%= f.submit t("save"), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
