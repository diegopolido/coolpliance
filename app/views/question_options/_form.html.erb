<%= form_for @question_option do |f| %>
  <div class="form-group">
    <%= f.label :label, :class => 'control-label' %>
    <%= f.text_field :label, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :correct, :class => 'control-label' %>
    <%= f.check_box :correct, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :question_id, :class => 'control-label' %>
    <%= f.select :question_id, @questions.map{ |c| [c.title, c.id] }, {}, {class: 'form-control dropdown-tooggle'} %>
  </div>

  <div class="form-actions">
    <%= f.submit t("save"), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                question_options_path, :class => 'btn' %>
  </div>
<% end %>
