<%- model_class = QuestionOption -%>
<div class="page-header">
  <h1><%=t "models.question_options" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:label) %></th>
      <th><%= model_class.human_attribute_name(:correct) %></th>
      <th><%= model_class.human_attribute_name(:question_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @question_options.each do |question_option| %>
      <tr>
        <td><%= link_to question_option.id, question_option_path(question_option) %></td>
        <td><%= question_option.label %></td>
        <td><%= question_option.correct %></td>
        <td><%= question_option.question&.title %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_option_path(question_option), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_option_path(question_option),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_option_path,
            :class => 'btn btn-primary' %>
