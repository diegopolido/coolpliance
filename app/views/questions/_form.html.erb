<%= form_for @question, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :available_in, :class => 'control-label' %>
    <%= f.date_select :available_in, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'control-label' %>
    <%= f.file_field :image, :class => 'form-control' %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :reason, :class => 'control-label' %>
    <%= f.text_area :reason, :class => 'form-control' %>
  </div>
 <div class="form-group">
    <%= f.label :event_id, :class => 'control-label' %>
    <%= f.select :event_id, @events.map{ |c| ["#{c.start_at.strftime("%d/%m/%y")} - #{c.end_at.strftime("%d/%m/%y")}", c.id] }, {}, {class: 'form-control dropdown-tooggle'} %>
  </div>
  <div class="form-actions">
    <%= f.submit t("save"), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
