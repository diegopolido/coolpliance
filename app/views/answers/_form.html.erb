<%= form_for @answer do |f| %>
  <div class="form-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <%= f.number_field :employee_id, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :question_option_id, :class => 'control-label' %>
    <%= f.number_field :question_option_id, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                answers_path, :class => 'btn' %>
  </div>
<% end %>
